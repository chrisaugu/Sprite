<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="com.fantastix.sprite.MessengerActivity" >

	<include layout="@layout/toolbar_chatroom"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<VideoView
			android:id="@+id/chatroom_video_background"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@id/messageToolbar"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:paddingLeft="@dimen/padding_medium"
			android:paddingRight="@dimen/padding_medium"
			android:layout_above="@id/text_message_holder">

			<ListView
				android:id="@+id/listMessages"
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="0.40"
				android:divider="@drawable/divider_gray"
				android:dividerHeight="0.4dip"
				android:layout_below="@+id/toolbar_chatroom"
				android:scrollbars="vertical"
				android:transcriptMode="alwaysScroll"
				android:layout_above="@+id/divider"
				android:padding="0dip"
				android:stackFromBottom="true"
				tools:listitem="@layout/message_left"
				tools:ignore="ObsoleteLayoutParam"/>

		</LinearLayout>

		<View
			android:layout_width="fill_parent"
			android:layout_height="0.1dip"
			android:background="@drawable/divider_gray"
			android:layout_above="@id/text_message_holder"/>

		<LinearLayout
			android:id="@+id/text_message_holder"
			android:layout_width="fill_parent"
			android:layout_height="?android:actionBarSize"
			android:orientation="horizontal"
			android:gravity="center"
			android:paddingEnd="12sp"
			android:paddingStart="12sp"
			android:layout_alignParentBottom="true">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="@dimen/padding_medium"
				android:src="@drawable/sendarea_plus_button"
				android:stateListAnimator="@anim/rotate"
				android:tint="@color/gray"
				android:background="@drawable/white_circle"/>

			<android.support.v4.widget.Space
				android:layout_width="0.0dip"
				android:layout_height="?android:actionBarSize"
				android:layout_weight="0.1"/>

			<EditText
				android:id="@+id/msg_field"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/speech_bubble"
				android:backgroundTint="@color/white"
				android:layout_weight="1"
				android:paddingTop="@dimen/input_pad"
				android:paddingBottom="@dimen/input_pad"
				android:paddingRight="@dimen/padding_small"
				android:paddingLeft="@dimen/padding_large"
				android:hint="@string/message_ellipses2"
				android:textSize="@dimen/font_size_14"
				android:ems="10" />

			<Space
				android:layout_width="0.0dip"
				android:layout_height="?android:actionBarSize"
				android:layout_weight="0.1"/>

			<ImageButton
				android:id="@+id/send_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="@dimen/padding_small"
				android:src="@drawable/sendarea_send_button"
				android:background="@drawable/white_circle"/>

		</LinearLayout>

	</RelativeLayout>

</LinearLayout>