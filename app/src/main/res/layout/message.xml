<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="10dp">

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginLeft="10dp"
		android:layout_alignParentTop="true"
		android:layout_alignParentStart="true">

		<TextView
			android:id="@+id/txtSender"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:text="Me"
			android:textSize="16sp"
			android:singleLine="true"
			android:layout_alignParentRight="true"
			android:paddingRight="10dp"
			android:paddingBottom="6dp"
			android:textColor="@android:color/black"
			android:textStyle="bold"/>

		<TextView
			android:id="@+id/txtDate"
			android:layout_alignParentLeft="true"
			android:textColor="@color/timestampline"
			android:background="@drawable/umeng_fb_reply_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textSize="12sp"
			android:text="7:38 - AM"
			android:layout_alignBottom="@+id/txtSender"/>

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/txtSender"
			android:layout_alignParentRight="true"
			android:gravity="right|center"
			android:padding="12dp"
			android:background="@drawable/speech_outgoing_incoming_bubble_background">

			<TextView
				android:id="@+id/txtMessage"
				android:paddingRight="12dp"
				android:paddingLeft="12dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/timestampline"
				android:textSize="14sp"
				android:text="Hello, how are you?"
				android:textStyle="italic|bold"/>

		</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>
