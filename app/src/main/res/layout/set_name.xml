<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="com.fantastix.sprite.SetNameActivity" >

	<RelativeLayout
		android:background="@drawable/title_bg"
		android:layout_width="fill_parent"
		android:layout_height="60.0dip">
		<RelativeLayout
			android:id="@id/btn_back"
			android:clickable="true"
			android:layout_width="62.0dip"
			android:layout_height="fill_parent">
			<LinearLayout
				android:gravity="center"
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_centerInParent="true">
				<ImageView
					android:padding="10.0dip"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:src="@drawable/ic_launcher" />
			</LinearLayout>
			<View
				android:background="@color/line"
				android:layout_width="1.0dip"
				android:layout_height="fill_parent"
				android:layout_alignParentRight="true" />
		</RelativeLayout>
		<RelativeLayout
			android:id="@id/btn_save"
			android:clickable="true"
			android:layout_width="62.0dip"
			android:layout_height="fill_parent"
			android:layout_alignParentRight="true">
			<LinearLayout
				android:gravity="center"
				android:orientation="vertical"
				android:layout_width="30.0dip"
				android:layout_height="30.0dip"
				android:layout_centerInParent="true">
				<ImageView
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:src="@drawable/btn_save_selector"
					android:scaleType="fitCenter" />
			</LinearLayout>
			<View
				android:background="@color/line"
				android:layout_width="1.0dip"
				android:layout_height="fill_parent" />
		</RelativeLayout>
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_marginLeft="18.0dip"
			android:layout_marginRight="2.0dip"
			android:layout_toLeftOf="@id/btn_save"
			android:layout_toRightOf="@id/btn_back">
			<TextView
				android:textSize="17.0sp"
				android:textColor="@color/set_name_color_land"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/set_name_stakwan"
				android:layout_centerVertical="true" />
		</RelativeLayout>
	</RelativeLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin">

		<EditText
			android:id="@+id/name_field"
			android:layout_width="match_parent"
			android:layout_height="40.0dip"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="54dp"
			android:hint="@string/set_name_hint"
			android:background="@drawable/edit_text_bg"
			android:paddingLeft="5.0dip"
			android:ems="10"
			android:inputType="textCapWords" >

			<requestFocus />
		</EditText>

	</LinearLayout>

</LinearLayout>
