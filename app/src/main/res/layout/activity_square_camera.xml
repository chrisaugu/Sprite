<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   tools:context="com.fantastix.sprite.SquareCameraActivity">

	<!-- Camera Preview -->
	<SurfaceView
	   android:id="@+id/camera_preview"
	   android:layout_width="match_parent"
	   android:layout_height="match_parent"
	   android:layout_above="@+id/overlay"
	   android:layout_below="@+id/toolbar"/>
	<!-- /End Camera Preview -->

	<!-- Overlay -->
	<RelativeLayout
	   android:id="@+id/overlay"
	   android:layout_width="match_parent"
	   android:layout_height="wrap_content"
	   android:layout_alignParentBottom="true"
	   android:layout_alignParentStart="true">

		<!-- Put your Content Here -->

		<LinearLayout
		   android:layout_width="fill_parent"
		   android:layout_height="180dp"
		   android:orientation="horizontal"
		   android:gravity="center"
		   android:background="@null">

			<ImageButton
			   android:id="@+id/gallery_album"
			   android:layout_width="95dp"
			   android:layout_height="95dp"
			   android:layout_weight="1"
			   android:background="@null"
			   android:src="@drawable/camera_glyph_gallery"/>

			<Button
			   android:id="@+id/camera_shutter"
			   android:layout_width="95dp"
			   android:layout_height="95dp"
			   android:background="@drawable/camera_shutter"/>

			<ImageButton
			   android:id="@+id/camera_toggle"
			   android:layout_width="95dp"
			   android:layout_height="95dp"
			   android:layout_weight="1"
			   android:src="@drawable/camera_cameratoggle"
			   android:background="@null"/>
		</LinearLayout>

		<ProgressBar
		   android:id="@+id/save_progress"
		   android:background="@drawable/ic_videocam_primary_24dp"
		   android:visibility="gone"
		   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:layout_centerInParent="true"
		   style="?android:attr/progressBarStyleLarge"
		   android:layout_weight="1"/>

	</RelativeLayout>

	<LinearLayout
	   android:id="@+id/toolbar"
	   android:layout_width="fill_parent"
	   android:layout_height="?android:actionBarSize"
	   android:orientation="horizontal"
	   android:gravity="center"
	   android:layout_alignParentTop="true"
	   android:layout_alignParentStart="true"
	   style="@style/Toolbar.Dark">

		<ImageButton
		   android:id="@+id/action_bar_button_close"
		   android:layout_width="match_parent"
		   android:layout_height="?android:actionBarSize"
		   android:layout_weight="5"
		   android:src="@drawable/action_bar_button_close"
		   android:tint="@color/white"
		   android:background="@null"/>
		<TextView
		   android:layout_width="match_parent"
		   android:layout_height="?android:actionBarSize"
		   android:gravity="left|center"
		   android:text="Camera"
		   android:textAllCaps="true"
		   android:paddingLeft="3.0dp"
		   style="@style/FantastixTheme.Camera"
		   android:layout_weight="1"/>
	</LinearLayout>
	<!-- /End Overlay -->
</RelativeLayout>