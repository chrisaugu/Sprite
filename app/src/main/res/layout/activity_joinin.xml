<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:paddingBottom="34dp"
   android:paddingLeft="@dimen/activity_horizontal_margin"
   android:paddingRight="@dimen/activity_horizontal_margin"
   android:paddingTop="34dp"
   tools:context="com.fantastix.sprite.SetNameActivity">

	<!-- Login progress -->
	<!--ProgressBar
	   android:id="@+id/login_progress"
	   style="?android:attr/progressBarStyle"
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:layout_marginBottom="8dp"
	   android:visibility="gone"/-->

		<LinearLayout
		   android:id="@+id/logo"
		   android:layout_width="match_parent"
		   android:layout_height="wrap_content"
		   android:orientation="vertical"
		   android:gravity="center_horizontal">

			<ImageView
			   android:layout_width="wrap_content"
			   android:layout_height="wrap_content"
			   android:layout_marginTop="34dp"
			   android:src="@drawable/logo_splash"
			   android:tint="@color/white"/>

			<TextView
			   android:layout_width="wrap_content"
			   android:layout_height="wrap_content"
			   android:text="Keep up and meet up with friends"
			   android:layout_centerHorizontal="true"
			   android:layout_below="@+id/logo"
			   android:layout_marginTop="24dp"
			   android:hint="@string/enter_name"
			   android:textColor="@color/white"
			   android:textSize="16dp"
			   android:layout_weight="1"/>

		</LinearLayout>

		<LinearLayout
		   android:id="@+id/field"
		   android:layout_width="match_parent"
		   android:layout_height="wrap_content"
		   android:orientation="vertical"
		   android:gravity="center"
		   android:padding="5dp"
		   android:layout_alignParentTop="true"
		   android:layout_centerHorizontal="true"
		   android:layout_marginTop="224dp"
		   android:background="@drawable/reg_bg">

			<LinearLayout
			   android:id="@+id/name_field_holder"
			   android:layout_width="match_parent"
			   android:layout_height="match_parent"
			   android:orientation="horizontal">

			<ImageView
			   android:layout_width="match_parent"
			   android:layout_height="match_parent"
			   android:src="@drawable/profile_glyph_username"
			   android:tint="@color/white"
			   android:layout_weight="8"/>

			<EditText
			   android:id="@+id/name_field"
			   android:layout_width="match_parent"
			   android:layout_height="match_parent"
			   android:layout_centerHorizontal="true"
			   android:layout_below="@+id/logo"
			   android:layout_weight="2"
			   android:hint="@string/enter_name"
			   android:textColor="@color/white"
			   android:ems="10"
			   android:inputType="textCapWords">
				<requestFocus/>
			</EditText>
			</LinearLayout>

			<View
			   android:layout_width="match_parent"
			   android:layout_height="1pt"
			   android:background="@color/holo_gray_light"/>

			<LinearLayout
			   android:id="@+id/gender_field_holder"
			   android:layout_width="match_parent"
			   android:layout_height="wrap_content"
			   android:orientation="horizontal">
				<ImageView
				   android:layout_width="match_parent"
				   android:layout_height="match_parent"
				   android:layout_weight="8"
				   android:src="@drawable/profile_glyph_gender"
				   android:tint="@color/white"/>
				<!--TextView
				   android:layout_width="match_parent"
				   android:layout_height="match_parent"
				   android:text="I'm a "
				   android:textSize="17dp"
				   android:gravity="center|left"
				   android:ems="10"
				   android:layout_weight="8"/-->
				<Spinner
				   android:id="@+id/gender_field"
				   android:layout_width="match_parent"
				   android:layout_height="match_parent"
				   android:layout_weight="2"/>
			</LinearLayout>

			<View
			   android:layout_width="match_parent"
			   android:layout_height="1pt"
			   android:background="@color/holo_gray_light"/>

			<LinearLayout
			   android:id="@+id/age_field_holder"
			   android:layout_width="match_parent"
			   android:layout_height="wrap_content"
			   android:orientation="horizontal">
				<ImageView
				   android:layout_width="match_parent"
				   android:layout_height="match_parent"
				   android:src="@drawable/profile_glyph_name"
				   android:tint="@color/white"
				   android:layout_weight="8"/>

				<Spinner
				   android:id="@+id/age_field"
				   android:entries="@array/birth_year"
				   android:layout_width="match_parent"
				   android:layout_height="match_parent"
				   android:layout_weight="6"/>

				<!--EditText
				   android:layout_width="match_parent"
				   android:layout_height="match_parent"
				   android:inputType="date"
				   android:ems="10"
				   android:id="@+id/age_field"
				   android:hint="Birthday"
				   android:layout_weight="6"/-->

				<TextView
				   android:id="@+id/myAge"
				   android:layout_width="match_parent"
				   android:layout_height="match_parent"
				   android:text="18 years old"
				   android:textSize="17dp"
				   android:gravity="center"
				   android:layout_weight="6"/>
			</LinearLayout>

		</LinearLayout>

	<Button
	   android:id="@+id/signin_button"
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:layout_below="@+id/field"
	   android:layout_centerHorizontal="true"
	   android:layout_marginTop="16dp"
	   android:paddingRight="99dp"
	   android:paddingLeft="99dp"
	   style="?android:textAppearanceSmall"
	   android:text="@string/continue_as"
	   android:textSize="@dimen/font_size_16"
	   android:textStyle="bold"
	   android:textAllCaps="false"
	   android:textColor="@color/material_blue_grey_700"
	   android:background="@drawable/btn_default"/>

</RelativeLayout>