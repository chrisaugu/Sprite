<?xml version='1.0' encoding='utf-8' ?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/holo_blue_bright"/>
            <corners
                android:radius="@dimen/button_corner_radius_redesign"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/holo_blue_light"/>
            <corners
                android:radius="@dimen/button_corner_radius"/>
        </shape>
    </item>
</selector>